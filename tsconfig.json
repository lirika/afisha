{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceRoot": "src/ts",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": false,
    "inlineSourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}