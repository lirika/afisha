{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "target": "es2015",
    "module": "commonjs",
    "sourceRoot": "src/ts",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": false,
    "inlineSourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": ["src/ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
